<div id="content">
    <%= pagination_links @notification_pages %>
    <table class="tabular">
        <thead class="tabular">
            <tr>
                <th>Subject</th>
                <th>Received</th>
            </tr>
        </thead>
        <tbody>
            <% if @notifications.size > 0 %>
            <%= render :partial => 'notification_line', :collection => @notifications %>
            <% else %>
            <tr class="stripe_even"><td colspan="2">No notifications.</td></tr>
            <% end %>
        </tbody>
    </table>
</div>
