<tr class="<%= notification_line_counter % 2 == 0 ? 'stripe_even' : 'stripe_odd' %>">
    <td><%= "<b>" if !notification_line.read_flag %><%= link_to(notification_line.subject,:action => 'show',:id => notification_line.id) %><%= "</b>"if !notification_line.read_flag %></td>
    <td><%= "<b>" if !notification_line.read_flag %><%= notification_line.created_at.to_formatted_s(:long) %><%= "</b>"if !notification_line.read_flag %></td>
</tr>