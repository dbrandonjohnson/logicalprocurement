<div id="titlebar">Retrieve password</div>
<div id="content">
  <%= error_messages_for 'user' %>

  <div class="form-padding">
    <p>Enter your email address to have your password sent to you.</p>

    <%= start_form_tag_helper %>
      <%= form_input :text_field, 'Email Address', 'email', :size => 30 %><br/>

      <div class="button-bar">
        <%= submit_tag 'Retrieve Password' %>
        <%= link_to 'Cancel', :action => 'login' %>
      </div>
    <%= end_form_tag %>
  </div>
</div>