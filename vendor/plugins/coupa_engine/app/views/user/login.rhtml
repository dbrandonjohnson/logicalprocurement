<% content_for(:page_head) do -%>
    <style type="text/css">
        body { background: white url('/plugin_assets/coupa_engine/images/coupa_flower_bg.png') no-repeat fixed top right; }
    </style>
<% end -%>

<%= javascript_tag(%(dojo.addOnLoad(function() { $('user_login').focus() }))) %>

<div id="titlebar">Welcome!</div>
<div id="content">    
    <div style="padding:15px;">
        <%= start_form_tag :action => 'login'  %>
        <%= wrapped_text_field 'Username', 'user', 'login', :size => 15 %>
        <%= wrapped_password_field 'Password', 'user', 'password', :size => 15 %>
        <div class="page_buttons_left">
            <div class="page_button"><%= rollover_submit_tag 'Sign On' %></div>
        </div>
        <%= end_form_tag %>
    </div>
    <div style="height:300px"> </div>
</div>
