<ul>
<% @all_roles.each do |role| %>
  <li style="list-style-type:none;">
    <input type="checkbox" id="roles_<%= role.id %>" name="roles[]" value="<%= role.id %>" 
      <% if @user.roles.include?(role) || role.name == UserEngine.config(:user_role_name) %>
        checked="checked"
      <% end %>
      <% if view_only %>
        DISABLED
      <% end %>
    />
    <%= link_if_authorized(role.name, {:controller => "role", :action => "show", :id => role}, {:show_text => true}) %>
    &raquo; 
    <%= role.description %>
  </li>
<% end %>
</ul>
