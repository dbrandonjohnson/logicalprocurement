<% if view_only %>
  <% if @pcard.nil? %>
    <div style="margin:10px;"><label>No P-Card Attached</label></div>
  <% else %>
    <div class="inline_form_element"><label>Name on card</label><%= nil_on_fail{@pcard.name} || '&nbsp;' %></div>
    <div class="inline_form_element"><label>Card number</label><%= nil_on_fail{@pcard.number} || '&nbsp;' %></div>
    <div class="inline_form_element"><label>Expiration date</label><%= nil_on_fail{@pcard.expiry} || '&nbsp;' %></div>
  <% end %>
<% else %>
  <%= inline_text_field({:name => "Name on card"}, 'pcard', "name") %>
  <%= inline_text_field({:name => "Card number"},'pcard', "number") %>
  <%= inline_text_field({:name => "Expiration date"}, 'pcard', "expiry") %>
<% end %>
