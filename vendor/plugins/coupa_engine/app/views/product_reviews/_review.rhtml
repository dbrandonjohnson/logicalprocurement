<div style="padding:10px;">
<h5><%= review.title %></h5>
<div style="float:left">
<ul class='star-rating'>
    <li class='current-rating' style='width:<%= review.rating.round * 0.7 %>px;'>&nbsp;</li>
</ul>
</div>
<div style="float:left">&nbsp;<small>Review by: <%= get_reviewer(review) %>&nbsp;
(<%= link_to_remote("Report this", :update => 'flash_container', :confirm => "Do you wish to report this review as inappropriate?", 
:url => { :controller => 'objections', :action => 'object', 
:params => { :product_review_id => review.id }}) %>)
<% if review.deleteable? then %>&nbsp;(<%= link_to_remote 'Delete', :url => {:controller => 'product_reviews', :action => 'embedded_destroy', :id => review.id} %>)<% end %></small>
</div>
<div style="float:right;align:right;">
<small><%= get_review_date(review) %></small>
</div>
<div style="clear:both;">
<%= review.text %>
</div>
</div>