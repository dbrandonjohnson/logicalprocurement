<%= error_messages_for 'product_review' %>

<!--[form:product_review]-->
<%= select 'product_review', 'catalog_item_id', CatalogItem.find_all.collect{ |u| [u.name, u.id]}%>

<p><label for="product_review_rating">Rating</label><br/>
<%= text_field 'product_review', 'rating'  %></p>

<p><label for="product_review_title">Title</label><br/>
<%= text_field 'product_review', 'title'  %></p>

<p><label for="product_review_text">Text</label><br/>
<%= text_area 'product_review', 'text'  %></p>
<!--[eoform:product_review]-->

