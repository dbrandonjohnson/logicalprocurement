<% content_for("page_scripts") do -%>
    function update_rating(id,val) {
        document.getElementById('product_review_'+id+'_rating').value = val;
        document.getElementById('review_rating_'+id).childNodes[1].style.width = ''+val * 0.7+'px';
        return false;
    }
<% end -%>

<div id="content">
    <%= pagination_links @product_review_pages %>
    <table class="tabular">
    <%= render :partial => 'managed_review', :collection => @product_reviews %>
    </table>
</div>
<div id="right_col">
    <div class="portlet">
        <div class="portlet_header">
            <h3>My Content</h3>
        </div>
        <div class="portlet_body">
            <br/>
            <ul style="line-height:12pt;padding:5px 20px;">
                <li><%= link_to 'Tags', :controller => 'tag', :action => 'manage' %></li>
                <li><%= link_to 'Employee Reviews', :controller => 'product_reviews', :action => 'manage' %></li>
            </ul><br/>
        </div>
    </div>
    <%= render_component :controller => 'tag', :action => 'cloud_portlet' , :params => {:limit => {:limit => 60}}%>
</div>