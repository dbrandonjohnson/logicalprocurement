<div id="content">
  <% if @order_header.versions.size > 1 %>
  <%= javascript_tag( update_element_function 'titlebar_postamble', :content => render(:partial => 'revision_picker') ) %>
  <%= observe_field "order_header_version", :url => {:action => 'show', :id => (@order_header.respond_to?(:order_header_id) ? @order_header.order_header_id : @order_header.id)}, :with => 'version', :update => 'order_body' %>
  <% end %>
  <div id="order_body">
  <%= render(:partial => 'show_body', :locals => {:order_header => @order_header}) %>
  </div>
</div>