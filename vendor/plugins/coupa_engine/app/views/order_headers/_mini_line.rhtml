<tr class="<%= mini_line_counter % 2 == 0 ? 'stripe_even': 'stripe_odd'%>">
    <td><span id="po_<%= mini_line.id %>"><img src="<%= image_path 'layers.png' %>"> <%= mini_line.id %></span></td>
    <td><%= mini_line.supplier.name %></td>
    <td><%= mini_line.created_at.to_date.to_formatted_s(:short) %></td>
    <td><%= mini_line.status %></td>
    <td><%= render_attribute mini_line.total %></td>
</tr>
<%= draggable_element "po_#{mini_line.id}", :revert => true, :ghosting => true %>