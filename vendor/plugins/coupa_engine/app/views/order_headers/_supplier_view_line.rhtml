<tbody class="tabular">
    <tr class="<%= cycle('stripe_even','stripe_odd') %>">
        <td><%= supplier_view_line.line_num %></td>
        <td><%= supplier_view_line.formatted_quantity %></td>
        <td><%= supplier_view_line.uom.name if supplier_view_line.uom %></td>
        <td><%= supplier_view_line.description %></td>
        <td><%= render_attribute supplier_view_line.price %></td>
        <td><%= render_attribute supplier_view_line.total %></td>
    </tr>
    <% if supplier_view_line.attachments.size > 0 %>
    <tr class="<%= cycle('stripe_even','stripe_odd') %>" style="display:none;">
        <td colspan="6"></td>
    </tr>
    <tr class="<%= cycle('stripe_even','stripe_odd') %>">
        <td>&nbsp;</td>
        <td colspan="5">
          <%= render :partial => 'attachments/embedded_list', :locals => {:editable => false, :attach_to => supplier_view_line, :attachment_name => "supplier_view_line_#{supplier_view_line.id}", :supplier_view_key => supplier_view_line.order_header.supplier_view_key} %>
        </td>
    </tr>
    <% end %>
</tbody>