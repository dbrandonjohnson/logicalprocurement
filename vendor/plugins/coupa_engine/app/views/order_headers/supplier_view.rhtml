<div id="content">
    <h3>Attachments</h3>
    <%= render :partial => 'attachments/embedded_list', :locals => {:editable => false, :attach_to => @order_header, :attachment_name => 'supplier_view', :supplier_view_key => @order_header.supplier_view_key} %>
<br/>
    <h3>Lines</h3>
    <table class="tabular">
        <thead class="tabular">
            <tr>
                <th>Line</th>
                <th>Qty</th>
                <th>Unit</th>
                <th>Description</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tfoot class="tabular">
            <tr>
                <td colspan="5" align="right">Total</td>
                <td><%= render_attribute @order_header.total %></td>
            </tr>
        </tfoot>
        <%= render :partial => 'supplier_view_line', :collection => @order_header.order_lines %>
    </table>
</div>