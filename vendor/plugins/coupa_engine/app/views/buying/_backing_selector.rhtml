<%   options =  "<option value='none' #{"SELECTED" if backing=='none'}>None</option>" 
     options += "<option value='contract' #{"SELECTED" if backing=='contract'}>Contract</option>" unless contracts.empty? 
%>
<label>Backing Document</label>
<% unless contracts.empty? %>
    <%= select_tag "requisition_line[#{req_line.id}][backing]", options, 
                   :onchange => "$('requisition_line_#{req_line.id}_contract_selector', 'requisition_line_#{req_line.id}_none_selector').invoke('hide'); Element.show('requisition_line_#{req_line.id}_'+this.value+'_selector');" %>
<% else %>
    <span style="color:#999">None</span>
    <%= hidden_field_tag "requisition_line[#{req_line.id}][backing]", 'none' %>
<% end %>
