<label>Contract</label>
    <% if req_line.contract_editable? %>
      <%= select_tag "requisition_line[#{req_line.id}][contract]",
          "<option value=\" \">#{contracts.size == 0 ? 'None available' : ''}</option>"+options_from_collection_for_select(contracts,'id','name',selected),
          "id" => "requisition_line_#{req_line.id}_contract_id" %>&nbsp;<%=
    image_tag('spinner.gif', 
          :id => "requisition_line_#{req_line.id}_contract_wait", 
          :style => "display:none;")%>
    <% else %>
    <%= req_line.contract.blank? ? '<span style="color:#999">None</span>' : req_line.contract.name %>
    <%= hidden_field "requisition_line[]","contract_id" %>
    <% end %>
