<% @requisition_line = req_line %>
<% current_backing = req_line.contract ? 'contract' : 'none' %>
<div id="requisition_line_<%= req_line.id %>_backing_selector" class="inline_form_element">
    <%= render :partial => "backing_selector", :locals => { :backing => current_backing, :req_line => req_line, :contracts => contracts } %>
</div>

<div id="requisition_line_<%= req_line.id %>_none_selector" style="<%= "display:none;" unless current_backing=='none' %>padding-top:5px;" class="inline_form_element"><label>Release Without Backing Document</label><%= check_box "requisition_line[]","released_by_buyer", :style => "border:none;" %></div>

<div id="requisition_line_<%=req_line.id %>_contract_selector" <%= "style='display:none;'" unless current_backing=='contract' %> class="inline_form_element">
    <%= render :partial => 'contract_selector', :locals => {:req_line => req_line, :contracts => contracts, :selected => req_line.contract_id} %>
</div>

