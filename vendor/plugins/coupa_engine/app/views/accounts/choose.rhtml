<div id="content">
    <br/>
    <table class="tabular">
        <thead class="tabular">
            <tr class="top_bar"><td colspan="4">
                <div style="float:right">
                    <span id="page_links"><%= render :partial => 'choose_links' %></span>
                </div>
                <div id="segments" style="padding:none">
                    <%= render :partial => 'segment_search_form' %>
                </div> 
            </td></tr>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Type</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody class="tabular" id="account_list">
<% if @accounts.size > 0 %>
<%= render :partial => 'choose_summary', :collection => @accounts %>
<% else %>
<tr class="stripe_even">
    <td colspan="3">
        <span style="color:#999">No accounts yet</span>
    </td>
</tr>
<% end %>
        </tbody>
    </table>
<div style="clear:both">&nbsp;</div>
</div>
