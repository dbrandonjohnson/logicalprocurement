<tr class="<%= cycle('stripe_even','stripe_odd') %>">
    <td><%=h picker_summary.name %></td>
    <td><%=h picker_summary.code %></td>
    <td><%=h picker_summary.account_type.name %></td>
    <td>
        <%= form_tag({:action => 'pick', :id => picker_summary.id},:id => "#{field_root_id}_account_picker_form_#{picker_summary.id}") %><%= hidden_field_tag 'field_root_id', field_root_id %>
        <%= rollover_submit_to_remote('Choose', "#{field_root_id}_account_picker_form_#{picker_summary.id}", :url => {:action => 'pick',:id => picker_summary.id}) %>
        </form>
    </td>
</tr>
