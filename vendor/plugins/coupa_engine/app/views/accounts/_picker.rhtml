<div id="<%= field_root_id %>_picker" dojotype="dojo:Dialog">
<%= link_to_function image_tag('cross.png', :alt => 'Close', :style => "float:right"), "close_account_picker('#{field_root_id}')" %>

<h3>Choose an account</h3>
    <table class="tabular">
        <thead class="tabular">
            <tr class="top_bar"><td colspan="4">
                <div style="float:right">
                    <span id="page_links"><%= render :partial => 'picker_links', :locals => {:field_root_id => field_root_id} %></span>
                </div>
                <div id="segments" style="padding:none">
                    <%= render :partial => 'picker_segment_search_form', :locals => {:field_root_id => field_root_id} %>
                </div>
            </td></tr>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Type</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody class="tabular" id="account_list">
<% if @accounts.size > 0 %>
<%= render :partial => 'picker_summary', :collection => @accounts, :locals => {:field_root_id => field_root_id} %>
<% else %>
<tr class="stripe_even">
    <td colspan="3">
        <span style="color:#999">No accounts yet</span>
    </td>
</tr>
<% end %>
        </tbody>
    </table>
</div>
