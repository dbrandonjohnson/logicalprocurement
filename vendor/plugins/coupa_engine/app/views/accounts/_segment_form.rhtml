<% if account_type %>
    <% (1..20).to_a.collect!{|n| "segment_#{n}"}.each do |field| %>
        <% if account_type.send("#{field}_field_type") %>
            <%= wrapped_text_field({:name => "#{field}".humanize+" - #{account_type.send(field+'_field_type').name}",:required => true}, 'account', "#{field}") %>
        <% end %>
    <% end %>
<% end %>
