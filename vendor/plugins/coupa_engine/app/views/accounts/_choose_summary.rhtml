<tr class="<%= cycle('stripe_even','stripe_odd') %>">
    <td><%=h choose_summary.name %></td>
    <td><%=h choose_summary.code %></td>
    <td><%=h choose_summary.account_type.name %></td>
    <td align="center">
        <%= form_tag :action => 'choose', :id => choose_summary %>
        <table><tr><td><%=small_rollover_submit_tag 'Choose' %></td><td>&nbsp;<small><label><%= check_box_tag 'default',1,false, :style => "border:none;"%>Make default</label></small></td></tr></table>
        </form>
    </td>
</tr>
