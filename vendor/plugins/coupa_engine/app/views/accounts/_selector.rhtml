<% if object.send("#{method}_editable?") -%>
  <% content_for(:page_head) do -%>
  <%= javascript_include_tag('account_selector', :plugin => 'coupa_engine') %>
  <% end -%>
<%= text_field(object_name, method, {"autocomplete" => "off", "class" => "acaccount", "size" => "20"}.update(tag_options)) %><%=
image_tag('spinner.gif', 
:id => "#{field_root_id}_wait", 
:style => "display:none;max-height:16px;vertical-align:top;padding:1px 0px")%><div id="<%= field_root_id %>_auto_complete" class="autocomplete" style="white-space:normal;display:none;"></div>
<%= hidden_field(object_name,method+'_id') -%>
<% else -%>
<%= object.send(method).code %>
<% end -%>