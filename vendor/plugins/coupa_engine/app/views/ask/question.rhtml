<% content_for("page_scripts") do -%>
<%= javascriptize_helpers [:answer_button, :close_button, :hide_answer_form, :hide_close_form] %>
<% end -%>

<div id="content">
    <%= render :partial => 'answers' %>

    <table id="answer_buttons" style="padding-top:1em">
        <tr>
            <td><%= rollover_link_to_function('Answer', 'answer_button()') if @question.eligible_to_answer? %></td>
            <td><%= rollover_link_to_function('Close', 'close_button()') if @question.eligible_to_close? %></td>
        </tr>
    </table>
    <%= render :partial => 'answer_form' %>
    <%= render :partial => 'close_form' %>
</div>

<div id="right_col">
    <%= render_component :controller => 'requisition_headers', :action => 'portlet' %>
    <%= render_component :controller => 'tag', :action => 'cloud_portlet', :params => {:limit => {:limit => 60}} %>
</div>
