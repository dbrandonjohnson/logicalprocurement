<div id="subscribers">
    <% if @subscriptions.empty? -%>
        <p>No user is subscribed to this category yet.</p>
    <% end -%>

    <% @subscriptions.each do |subscription| -%>
        <p><%= h(subscription.subscriber.fullname) %><small style="padding-left:1em"><%= link_to_remote image_tag('delete.png',:title => 'Unsubscribe'), :url => {:action => 'unsubscribe_from_subscribers', :id => subscription.id}, :confirm => 'Are you sure?' %></small></p>
    <% end -%>
</div>