<div class="stripe_<%= cycle "even", "odd" %>">
    <div style="float:right"><small><%= link_to image_tag("delete.png"), {:action => 'delete_question', :id => question.id}, :confirm => 'Are you sure?' if question.eligible_to_delete? %></small></div>
    <div><h3><%= link_to h(question.text), {:action => 'question', :id => question.id} %></h3></div>
    <div>
        <div style="width:50%; float:left;">Asked by <%= question.created_by.fullname %></div>
        <div style="width:20%; float:left; text-align: center;"><%= render_attribute(question.created_at.to_date) %></div>
        <div style="width:15%; float:left; text-align: center;"><%= question.answers.size %> answer<%= 's' if question.answers.size != 1 %></div>
        <div style="width:15%; float: left; text-align: right;"><%= question.status %></div> 
    </div>  
    <div style="clear:both;"></div>
</div>
