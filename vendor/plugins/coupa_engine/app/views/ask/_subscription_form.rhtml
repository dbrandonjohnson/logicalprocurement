<div id="subscription_form">
    <% if @categories_for_select.empty? -%>
        <p>You are subscribed to every category in Ask an Expert.</p>
    <% else -%>
        <%= error_messages_for 'subscription' %>

        <%= form_remote_tag :url => {:action => 'subscribe_from_subscriptions'} %>
            <%= hidden_field 'subscription', 'subscriber_id' %>
            <p><%= select 'subscription', 'ask_category_id', @categories_for_select, {:include_blank => true} %></p>
            <p><%= rollover_submit_tag 'Add'%></p>
        <%= end_form_tag %>
    <% end -%>
</div>