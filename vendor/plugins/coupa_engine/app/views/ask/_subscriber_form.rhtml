<div id="subscriber_form" style="padding-top:1em">
    <h3>Subscribe a new user to this category</h3>
    <% if @subscribers_for_select.empty? -%>
        All users are subscribed to this category.
    <% else -%>
        <%= error_messages_for 'subscription' %>
        <%= form_remote_tag :url => {:action => 'subscribe_from_subscribers'} %>
            <%= hidden_field 'subscription', 'ask_category_id' %>
            <p><div style="float: left;"><%= select 'subscription', 'subscriber_id', @subscribers_for_select, {:include_blank => true} %></div><div style="float: left; margin-left: 10px;"<%= rollover_submit_tag 'Add' %></div></p>
            <div style="clear:both;"></div>
        <%= end_form_tag %>
    <% end -%>
</div>
