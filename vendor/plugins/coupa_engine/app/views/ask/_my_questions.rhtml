<div id="my_questions">    
    <% unless @questions_asked.empty? -%>
        <div style="float:left; width: 49%; padding-right: 2%;">
            <h3>Questions I have asked recently</h3>
            <div style="border: 1px solid #ccc;">
            <%= render :partial => 'question', :collection => @questions_asked.first(3) %>
            </div>
            <div><small><%= link_to 'more...', :action => 'questions_asked' if @questions_asked.size > 3 %></small></div>
        </div>
    <% end -%>

    <% unless @questions_answered.empty? -%>
        <div style="float: left; width: 49%;">
        <h3>Questions I have answered recently</h3>
        <div style="border: 1px solid #ccc;">
        <%= render :partial => 'question', :collection => @questions_answered.first(3) %>
        </div>
        <div><small><%= link_to 'more...', :action => 'questions_answered' if @questions_answered.size > 3 %></small></div>
    <% end -%>    
</div>