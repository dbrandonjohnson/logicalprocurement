<div id="content">
    <% unless !@similar_questions or @similar_questions.empty? -%>
        <div id="similar_questions" style="padding-bottom:1em">
            <h3>You might also want to look at these previously answered questions</h3>
            <% @similar_questions.each do |question| -%>
                <p><%= link_to h(truncate(question.text, 80)), :action => 'question', :id => question.id %></p>
            <% end -%>
        </div>
    <% end -%>
    
    <h3 style="padding-top:1em">Ask a question</h3>
    <%= render :partial => 'question_form' %>
</div>
<div id="right_col">
    <%= render_component :controller => 'requisition_headers', :action => 'portlet' %>
    <%= render_component :controller => 'tag', :action => 'cloud_portlet', :params => {:limit => {:limit => 60}} %>
</div>
