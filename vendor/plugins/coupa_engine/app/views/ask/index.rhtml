<div id="content" style="margin-right: 29px">
    <div style="float: left; width: 49%; padding-right: 2%">
        <h3>My subscriptions</h3>
        <%= render :partial => 'subscriptions' %>
    
        <h3 style="clear:both; padding-top: 1em">Subscribe to a new category</h3>
        <%= render :partial => 'subscription_form' %>
    </div>
    
    <div style="float: left; width: 49%">
        <h3>Ask a new question</h3>
        <%= render :partial => 'question_form' %>
    </div>
    
    <div style="clear: both; padding-top: 2em">
        <%= render :partial => 'my_questions' %>
    </div>    
</div>
