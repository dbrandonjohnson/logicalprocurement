<div id="answer_form" style="padding-top: 1em; display: none">
    <%= error_messages_for 'answer' %>

    <h3>Post a new answer</h3>
    <%= form_remote_tag :url => {:action => :answer_question} %>
    <%= hidden_field 'answer', 'ask_question_id' %>
    <p><%= text_area 'answer', 'text', :rows => 5 %></p>
    <table>
        <tr>
            <td><%= rollover_submit_tag 'Answer' %></td>
            <td><%= rollover_link_to_function 'Cancel', 'hide_answer_form()' %></td>
        </tr>
    </table>
    <%= end_form_tag %>
</div>