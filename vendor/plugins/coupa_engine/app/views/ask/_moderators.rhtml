<div id="moderators">
    <% if @moderators.empty? %>
    <p>There are no moderators in this category yet.</p>
    <% end %>

    <% @moderators.each do |moderator| %>
        <p><%= moderator.user.fullname %><small style="padding-left:1em"><%= link_to_remote image_tag('delete.png'), :url => {:action => 'remove_moderator', :id => moderator.id}, :confirm => 'Are you sure?' %></small></p>
    <% end %>
</div>