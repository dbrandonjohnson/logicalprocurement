<div id="question_form">
    <%= error_messages_for 'question' %>
    <%= form_remote_tag :url => {:action => 'post_question'} %>
        <%= wrapped_text_area({:name => 'Question', :required => true}, 'question', 'text', :rows => 5) %>
        <%= wrapped_select({:name => 'Category', :required => true}, 'question', 'ask_category_id', category_names_and_ids, {:include_blank => true}) %>
        <%= rollover_submit_tag 'Create' %>
    <%= end_form_tag %>
</div>
