<div id="moderator_form" style="padding-top:1em">
    <h3>Add a new moderator to this category</h3>
    <% if @moderators_for_select.empty? %>
        <p>All users are already moderators for this category.</p>
    <% else %>
        <%= error_messages_for 'moderator' %>
        <%= form_remote_tag :url => {:action => 'add_moderator'} %>
            <%= hidden_field 'moderator', 'ask_category_id' %>
            <%= inline_text_field_selector('Moderator','moderator', 'user',{:size => 30},{:url => {:action => 'auto_complete_for_moderator_user', :cat_id => @category.id}}) %>
<%= rollover_submit_tag('Add', :class => "form-submit-button") %>
        <%= end_form_tag %>
    <% end %>
</div>
