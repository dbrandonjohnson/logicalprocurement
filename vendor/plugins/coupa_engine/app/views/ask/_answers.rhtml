<div id="answers">
    <h3><%= h(@question.text) %><small style="font-weight: normal; padding-left: 1em"><%= image_tag("lock.png", :title => "Closed") if @question.closed? %><span style="float:right">asked in <em><%= truncate(@question.category.name) %></em> by <%= @question.created_by.fullname %> on <%= @question.created_at.to_date.to_formatted_s(:long) %></span></small></h3>

    <% if @answers.empty? %>
        <p>No answers yet</p>
    <% end %>

    <% @answers.each do |answer| %>
    <div class="stripe_<%= cycle "even", "odd" %>">
        <div><%= simple_format(h(answer.text)) %></div>
        <div style="text-align:right"><small style="font-weight: normal;">answered by <%= answer.created_by.fullname %> on <%= answer.created_at.to_date.to_formatted_s(:long) %></small></div>
    </div>
    <% end %>
</div>
