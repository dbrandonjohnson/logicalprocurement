<div id="content">
    <h3>Recent tags</h3>
    <blockquote>
    <% tag_cloud(@recent_tags, ('cloud1'..'cloud5').to_a) do |tag, cloud_class| %>
      <%= link_to(h("#{tag}"), {:controller =>'search', :action =>'results', :search => "tag:\"#{tag}\"", :type => @type}, { :class => cloud_class } ) -%>
    <% end %>
    </blockquote>
    <h3>Popular tags</h3>
    <blockquote><span style="font-size:larger">
        <% tag_cloud(@popular_tags, ('cloud1'..'cloud5').to_a) do |tag, cloud_class| %>
          <%= link_to(h("#{tag}"), {:controller =>'search', :action =>'results', :search => "tag:\"#{tag}\"", :type => @type}, { :class => cloud_class } ) -%>
        <% end %></span>
    </blockquote>
</div>
<div id="right_col">
    <%= render_component :controller => 'requisition_headers', :action => 'portlet' %>
</div>