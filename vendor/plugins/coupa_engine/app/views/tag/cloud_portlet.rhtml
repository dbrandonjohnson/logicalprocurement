<div id="tag_cloud" class="portlet">
<div class="portlet_header"><h3>Popular Tags</h3></div>
<div class="portlet_body"><div style="padding:5px;"><% tag_cloud(@tagged_items, ('cloud1'..'cloud5').to_a) do |tag, cloud_class| %>
  <%= link_to(h("#{tag}"), {:controller =>'search', :action =>'results', :search => "tag:\"#{tag}\"", :type => @type}, { :class => cloud_class } ) -%>
<% end %></div>
</div>
</div>