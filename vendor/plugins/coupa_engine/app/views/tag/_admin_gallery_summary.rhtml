<div style="width:180px;float:left;padding:5px;margin:0;" id="tag_<%= tag.id %>_catalog_item_<%= admin_gallery_summary.id%>">
    <div style="height:30px;padding:5px;">
        <b><%= link_to truncate(admin_gallery_summary.name,45), :controller => 'catalog_items', :action => 'show', :id => admin_gallery_summary.id %></b>
    </div>
    <div style="padding:5px;">
        <%= image_tag(image_url(admin_gallery_summary),{:id=>"item_#{admin_gallery_summary.id}", :height => 60}) %>
    </div>
    <table>
        <tr>
            <td><b><%= render_attribute admin_gallery_summary.list_price %></b></td>
            <td><%= small_rollover_link_to_remote 'Delete', :url => { :action => "admin_remove_tagging", :tag_id => tag.id, :taggable_id => admin_gallery_summary.id, :taggable_type => 'CatalogItem' }%></td>
        </tr>
    </table>
    <ul class='star-rating'>
        <li class='current-rating' style='width:<%= (admin_gallery_summary.avg_rating ||= 0).round * 0.7 %>px;'>&nbsp;</li>
    </ul>
</div>
