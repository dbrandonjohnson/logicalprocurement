<div id="tags" class="portlet">
<div class="portlet_header">
<h3><%= link_to 'Tags', :controller => 'tag', :action => 'index' %></h3>
</div>
<div class="portlet_body">
<div style="padding:5px">
<%= render :partial => 'tag', :collection => @item.taggings %>
</div>
<%= rollover_link_to_function 'Tag It', "toggle_and_focus('tag_add','tag');" %>
<div id="tag_add" style="display:none;background-color:#ddd;padding:5px;">
    <%= form_remote_tag :update => 'tags', :url => {:controller => 'tag', :action => 'add'}  %>
    <%= hidden_field_tag 'id', @item.id %>
    <%= hidden_field_tag 'type', @item.class %>
    <%= wrapped_text_field_tag({ :name => 'Tag',:hint => 'spiffy,"new employee kit"' }, 'tag') %>
    <table border="0"><tr><td><%= check_box_tag 'is_private',1,false, :style => "border:none;" %>Private </td><td><%= rollover_submit_tag 'Add tag' %></td></tr></table>
    </form>
</div>
</div>
</div>
