<div>
<%= form_remote_tag :update => "tab_suppliers_region", :url => { :controller => "suppliers", 
                    :action => "mini" }, :html => { :action => url_for(
                    :controller => "suppliers", :action => "mini") } %>
<table border="0"><tr><td><%= wrapped_text_field_tag 'Search', 'id' %></td><td valign="bottom"><%= rollover_submit_tag 'Go!'%></td></tr></table>
</form>
<table class="tabular">
    <thead class="tabular">
        <tr>
            <th>Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
    <% if @suppliers.size > 0 %>
    <%= render :partial => 'mini_line', :collection => @suppliers %>
    <% else %>
        <tr>
            <td colspan="2" class="stripe_even">No suppliers.</td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>