<div id="edit_supplier_dialog" dojoType="dojo:Dialog" style="display:none">
  <div style="width:100%;">
    <h3 style="font-size: 12pt;font-weight: bold;color: #369;">Edit Draft Supplier</h3>
    <%= form_remote_tag(:url => {:controller => 'suppliers', :action => 'edit_supplier', :id => @supplier.id},:html => {:id => "supplier_#{@supplier.id}_form"})%>
    <%= hidden_field_tag 'update_field_root', @update_field_root %>
    <div id="supplier_<%= @supplier.id %>_form_partial" class="form_response"> 
    <% @contact = @supplier.primary_contact 
       @address = @supplier.primary_address %>
    <%= render :partial => 'suppliers/mini_form' %>
    </div>
    <div class="page_buttons_left">
        <div class="page_button"><%= rollover_link_to_function 'Cancel', "hide_and_destroy('edit_supplier_dialog');" %></div>
        <div class="page_button"><%= rollover_submit_to_remote 'Save',"supplier_#{@supplier.id}_form",:url => {:controller => 'suppliers', :action => 'edit_supplier', :id => @supplier } %></div>
    </div>
    <%= end_form_tag %>
  </div>
</div>
