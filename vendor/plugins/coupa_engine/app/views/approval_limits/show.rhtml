<div id="content">
<% for column in ApprovalLimit.content_columns %>
<div class="inline_form_element"><label>Amount</label><%=render_attribute(@approval_limit.amount,:long) %></div>
<div style="clear:both;"> </div><br/>
<% end %>
<h3>Users with this Limit</h3>
<br/>
<table class="tabular">
    <thead class="tabular">
        <tr>
            <th>Login</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="tabular">
        <% @users.each do |user| %>
        <tr class="<%= cycle('stripe_even','stripe_odd') %>">
            <td><%= link_to(user.login,{:controller => 'user', :action => 'show', :id => user.id}) %>
            <td><%= h(user.fullname) %></td>
            <td><%= link_to(image_tag('pencil', :title => 'Edit'), {:controller => 'user', :action => 'edit_user', :id => user.id}, :title => 'Edit') %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>