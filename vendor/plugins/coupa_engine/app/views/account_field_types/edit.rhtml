<div id="content">
    <%= error_messages_for 'account_field_type' %>
    <%= form_tag :action => 'update', :id => @account_field_type.id %>
    <%= render :partial => 'form' %>
        <table><tr>
            <td><%= rollover_link_to 'Cancel', :action => 'index' %></td>
            <td><%= rollover_submit_tag "Save" %></td>
        </tr></table>
    <%= end_form_tag %>
    </div>
    <div id="right_col">
        <div class="portlet">
            <div class="portlet_header">
                <h3>Account Maintenance</h3>
            </div>
            <div class="portlet_body">
                <ul style="line-height:12pt;">

                    <li><%= link_to 'Create new segment', :controller => 'account_field_types', :action => 'new' %></li>
                    <li><%= link_to 'Maintain segments', :controller => 'account_field_types', :action => 'index' %></li>
                    <li><%= link_to 'Create new set of books', :controller => 'account_types', :action => 'new' %></li>
                    <li><%= link_to 'Maintain sets of books', :controller => 'account_types', :action => 'index' %></li>
                    <li><%= link_to 'Create new account', :controller => 'accounts', :action => 'new' %></li>
                    <li><%= link_to 'Maintain accounts', :controller => 'accounts', :action => 'index' %></li>
                    <li><%= link_to 'Load accounts from a file', :controller => 'accounts', :action => 'bulk_loader' %></li>
                </ul>
            </div>
        </div>
    </div>
