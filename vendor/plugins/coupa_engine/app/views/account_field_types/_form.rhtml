<%= wrapped_text_field({:name => 'Name',:required => true}, 'account_field_type', 'name') %>
<%= wrapped_text_field({:name => 'Code',:required => true}, 'account_field_type', 'code',{:size => 5}) %>
<%= wrapped_select({:name => 'Validation Regular Expression', :required => true}, 'account_field_select_type', 'validation_regex', @validation_type, :selected => @selected_regex )-%>

<%= wrapped_text_field({ :name => '', :id => 'account_field_type_id',:hint => 'Example: [A-Za-z0-9]+', :style => @display_style} , 'account_field_type', 'validation_regex', :style => @display_style) %>
<%= observe_field 'account_field_select_type_validation_regex', :url => { :controller => 'account_field_types', :action=> 'validation_type' }, :with => 'value' -%>
<br/>