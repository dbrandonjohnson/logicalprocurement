<%= error_messages_for :exchange_rate %>
<div class="inline_form_element">
  <label>From Currency<span class="req"> * </span></label>
  <%= text_field_selector 'exchange_rate','from_currency' %>
</div>
<div class="inline_form_element">
  <label>To Currency<span class="req"> * </span></label>
  <%= text_field_selector 'exchange_rate','to_currency' %>
</div>
<div class="inline_form_element">
  <label>Rate<span class="req"> * </span></label>
  <%= text_field 'exchange_rate','rate' %>
</div>
<div class="inline_form_element">
  <label>Rate date<span class="req"> * </span></label>
  <%= date_picker_field 'exchange_rate','rate_date' %>
</div>