<div style="width:180px;float:left;padding:5px;margin:0;" id="catalog_item_<%= gallery_summary.id %>">
    <div style="height:30px;padding:5px;">
        <b><%= link_to truncate(gallery_summary.name,45), :controller => 'catalog_items', :action => 'edit', :id => gallery_summary.id %></b>
    </div>
    <div style="padding:5px;">
        <%= image_tag image_url(gallery_summary), :height => 60 %>
    </div>
    <table>
        <tr>
            <td><b><%= render_attribute gallery_summary.list_price %></b></td>
            <td><%= small_rollover_link_to_remote 'Delete', :url => { :action => "delete_item", :id => gallery_summary.id } if controller.action_name == 'edit' %></td>
        </tr>
    </table>
    <ul class='star-rating'>
        <li class='current-rating' style='width:<%= (gallery_summary.avg_rating ||= 0).round * 0.7 %>px;'>&nbsp;</li>
    </ul>
</div>
