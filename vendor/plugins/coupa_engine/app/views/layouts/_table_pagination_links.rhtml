<span id="<%= "#{table_options[:name]}_page_links" %>"><%= 
        pagination_links_each(table_row_pages,:params => {:search => table_options[:search]}) do |n|
           link_to_remote(n.to_s,:url => {:action => 'search_'+table_options[:name]+'_table', :page => n, :search => table_options[:search], :filter => table_options[:filter], :sort => table_options[:sort], :dir => table_options[:dir] },
                                  :loading => "Element.show('#{table_options[:name]}_wait');",
                                 :complete => "Element.hide('#{table_options[:name]}_wait');")
        end
%></span>
