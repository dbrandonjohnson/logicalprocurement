<tr class="<%= cycle('stripe_even','stripe_odd') %>" id="<%= "#{table_options[:name]}_row_#{table_row.id}"%>" valign="top">
    <% table_columns.each do |col| %>
      <% if col[:display]  && (col[:permission].blank? || session[:user].authorized?(col[:permission])) %>
          <td align="<%= col[:alignment] %>">
              <%= render :inline => col[:render_text], :locals => {:value => (col[:method] == :self ? table_row : table_row.send(col[:method]))} %>
          </td>
      <% end %>
    <% end %>
</tr>
