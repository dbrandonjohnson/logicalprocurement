<% if flash[:notice] %>
<div class="flash_notice" id="flash_notice">
    <span style="color:green;vertical-align:bottom;"><%= flash[:notice] %>&nbsp;</span>
</div>
<script type="text/javascript">
<%= visual_effect(:highlight,'flash_notice')%>
</script>
<% end %>
<% if flash[:message] %>
<div class="flash_notice" id="flash_message">
    <span style="color: red;vertical-align:bottom;"><%= flash[:message] %>&nbsp;</span>
</div>
<script type="text/javascript">
<%= visual_effect(:highlight,'flash_message')%>
</script>
<% end %>
<% if flash[:warning] %>
<div class="flash_notice" id="flash_warning">
    <span style="color:orange;vertical-align:bottom;"><%= flash[:warning] %>&nbsp;</span>
</div>
<script type="text/javascript">
<%= visual_effect(:highlight,'flash_warning')%>
</script>
<% end %>
