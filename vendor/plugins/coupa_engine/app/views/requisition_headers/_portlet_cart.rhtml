<div class="portlet_header"><div style="float:right;padding-top:14px;"><%= link_to(image_tag('pencil',:title => 'Edit'), { :controller => 'requisition_headers', :action => 'edit_cart', :id => @requisition_header.id },:title => 'Edit')%></div><h3><%= link_to 'Shopping Cart', { :controller => 'requisition_headers', :action => 'edit_cart', :id => @requisition_header.id }%></h3></div>
<div class="portlet_body" id="shopping_cart_body">
<% if @requisition_header.requisition_lines.empty? %>
<div style="padding:10px;">
<span style="color:#666;">Your cart is empty.<br/>Drag items here to add them.<br/></span>
</div>
<% end %>
<%= render :partial => 'requisition_headers/cart_item', :collection => @requisition_header.requisition_lines %>
<table width="100%"><tr><td>
<%= rollover_link_to 'Checkout', :controller => 'requisition_headers', :action => 'checkout', :id => @requisition_header.id %>
</td><td align="right" style="padding-right:5px;"><b><%= render_attribute(@requisition_header.total(session[:user].default_currency)) %></b></td></tr></table>
</div>