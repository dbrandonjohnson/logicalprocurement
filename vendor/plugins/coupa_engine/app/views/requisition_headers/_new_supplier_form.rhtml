<div id="new_supplier_dialog" dojotype="dojo:Dialog" style="display:none">
    <h3 style="font-size: 12pt;font-weight: bold;color: #369;">Enter New Supplier Information</h3>
    <%= form_remote_tag :url => {:controller => 'suppliers', :action => 'new_supplier'}%>
    <%= hidden_field_tag 'update_field_root', @update_field_root %>
    <div id="supplier_form_partial" class="form_response">
    <%= render :partial => 'suppliers/mini_form' %>
    </div>
    <div class="page_buttons_left">
        <div class="page_button"><%= rollover_link_to_function 'Cancel', "hide_and_destroy('new_supplier_dialog');" %></div>
        <div class="page_button"><%= rollover_submit_tag 'Save' %></div>
    </div>
    </form>
</div>
