<div id="edit_supplier_<%= @supplier.id %>" dojoType="Dialog" style="display:none">
    <h3 style="font-size: 12pt;font-weight: bold;color: #369;">Edit Draft Supplier</h3>
    <%= form_remote_tag(:url => {:controller => 'suppliers', :action => 'edit_supplier', :id => @supplier.id},:html => {:name => "supplier_#{@supplier.id}_form"})%>
    <%= hidden_field_tag 'update_field_root', @update_field_root %>
    <div id="supplier_<%= @supplier.id %>_form_partial" class="form_response">
    <% @contact = @supplier.primary_contact 
       @address = @supplier.primary_address %>
    <%= render :partial => 'suppliers/mini_form' %>
    </div>
    <div style="position:absolute">
    <table><tr>
        <td><%= rollover_link_to_function 'Cancel', "dojo.widget.byId('edit_supplier_#{@supplier.id}').hide(); Element.remove('edit_supplier_#{@supplier.id}');" %></td>
        <td><%= rollover_submit_tag 'Save' %></td>
</tr></table>
    </div>
    <div>
        <br/>
        <br/>
    </div>
    </form>
</div>