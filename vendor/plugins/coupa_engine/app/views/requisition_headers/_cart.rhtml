<table class="tabular">
    <thead class="tabular">
    <tr>
        <th colspan="2">&nbsp;</th>
        <th>Item</th>
        <th>Qty</th>
        <th>Unit</th>
        <th>Price</th>
        <th>Item Total</th>
    </tr>
    </thead>
    <tbody class="tabular">
        <%= render :partial => 'line', :collection => @requisition_header.requisition_lines %>
    </tbody>
    <tfoot class="tabular">
    <tr>
        <td align="right" colspan="6">Cart Total</td>
        <td align="right" nowrap><%= render_attribute(@requisition_header.total(session[:user].default_currency),:long) %></td>
    </tr>
    </tfoot>
</table>