<div id="reject_popup" dojoType="dojo:Dialog">
  <div style="width:100%;">
    <%= form_tag( {:action => 'reject', :id => @requisition_header.id}, {:id => 'reject_form'}) %>
      <%= wrapped_text_area "Reason for Rejection", "requisition_header", "reject_reason", :rows => '5', :cols => '50' %>
        <%= hidden_field_tag "submit_type", "save", :id => 'submit_type' %>
        <table><tr>
          <td><%= rollover_submit_tag 'Send' %></td>
          <td><%= rollover_link_to_function 'Skip', "$('submit_type').value = 'cancel'; $('reject_form').submit();" %></td>
        </tr>
        </table>
      </div>
    <%= end_form_tag %>
  </div>
</div>
