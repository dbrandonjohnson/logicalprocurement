<div id="content">
    <%= form_tag :action => 'update_company_info' %>
    <%= wrapped_text_field_tag 'Company Name',  'company_name', @company_name %>
    <h3>System Options</h3>
    <div style="padding:5px;">
      <%= check_box_tag 'draft_supplier',1, Setup.find_or_create_by_key('route_to_buyer_on_draft_supplier').value, :style => "border:none;" %><label>Route requisitions to the buyer if the supplier is in draft status</label><br/>
      <%= check_box_tag  'no_contract',1,Setup.find_or_create_by_key('route_to_buyer_on_no_contract').value, :style => "border:none;"  %><label>Route requisitions to the buyer if no contract is specified</label><br/>
      <%= check_box_tag  'allow_self_approval',1,Setup.find_or_create_by_key('allow_self_approval').value, :style => "border:none;"  %><label>Do not route for approval if requester has sufficient spending authority</label><br/>
    </div>
    <%= rollover_submit_tag 'Save' %>
    </form>
</div>