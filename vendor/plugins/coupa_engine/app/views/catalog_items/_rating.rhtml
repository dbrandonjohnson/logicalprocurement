<span id='rating_<%= @catalog_item.id%>'>
<ul class='star-rating'>
    <% if @catalog_item.avg_rating %>
    <li class='current-rating' style='width:<%= (@catalog_item.avg_rating * 0.7).round %>px;'>Currently <%= (@catalog_item.avg_rating / 20)%>/5 Stars.</li>
    <% end %>
</ul>
&nbsp;<span style="color:#999;"><small>(<%= @catalog_item.product_reviews.size %> rating<%= @catalog_item.product_reviews.size == 1 ? '' : 's' %>)</small></span>
</span>