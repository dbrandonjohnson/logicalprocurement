<div id="tags">
<b>Tags</b> [<a href=# onClick="Javascript:toggle('tag_add','tag');">+</a>]&nbsp;
<% for tag in @catalog_item.tags %>
<%= link_to tag.name, :controller => 'catalog_items', :action => 'tags_search', :id => tag.name %>
<% end %><br>
<span id="tag_add" style="display:none;border:1px dotted #ccc;background-color:#ffc;padding:5px;width:300px">
    <%= form_remote_tag :update => 'tags', :url => {:controller => 'catalog_items', :action => 'tags_add'}  %>
    <%= hidden_field_tag 'id', @catalog_item.id %>
    Tag: <%= text_field_tag 'tag' %>&nbsp;<%= submit_tag 'Add tag' %>
    </form>
</span>
</div>
