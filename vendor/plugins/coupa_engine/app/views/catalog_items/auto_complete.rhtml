<ul>
    <% @catalog_items.each do |catalog_item| -%>
    <li>
        <%= image_tag(image_url(catalog_item),{:height => 50, :style => 'float:left;margin-right:2px;'}) %>
        <span style="font-weight: bold;"><%= h(catalog_item.name) %></span><br/>
        <span style="color:#999"><%= catalog_item.contract.supplier %></span><br/>
        <span value="<%= catalog_item.list_price %>" style="color:#999"><%= render_attribute catalog_item.list_price %></span>
        <span target="item_id" style="display:none"><%= catalog_item.id %></span>
        <!-- Above is used by req-pool-edit, below is used by edit-cart.  they should converge to what's on top-->
        <span class="acid" style="display:none"><%= catalog_item.id %></span>
        <span class="acname" style="display:none"><%= catalog_item.name %></span>
        <span class="acsupplier_object" style="display:none"><%= catalog_item.contract.supplier %></span>
        <span class="acprice" style="display:none"><%= render_attribute catalog_item.list_price %></span></span>
        <span class="accurrency" style="display:none"><%= catalog_item.list_price.currency.code %></span>
        <span class="acuom" style="display:none"><%= catalog_item.uom.name %></span>
        <span class="acsupplier_id" style="display:none"><%= catalog_item.contract.supplier.id %></span>
        <span class="accontract" style="display:none"><%= catalog_item.contract_id %></span>
        <span class="acleadtime" style="display:none"><%= pluralize(catalog_item.lead_time, "day") if catalog_item.lead_time %></span>
    </li>
    <% end -%>
</ul>
