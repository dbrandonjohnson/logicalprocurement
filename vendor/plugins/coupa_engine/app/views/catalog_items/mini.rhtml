<div>
<%= form_remote_tag :update => "tab_catalog_region", :url => { :controller => "catalog_items", 
                    :action => "mini" }, :html => { :action => url_for(
                    :controller => "catalog_items", :action => "mini") } %>
                    <table border="0"><tr><td><%= wrapped_text_field_tag 'Search', 'search'%></td><td valign="bottom"><%= submit_tag 'Go', :class => 'form-submit-button' %></td></tr></table>
</form>
<table class="tabular">
    <thead class="tabular">
        <tr>
            <th>Item</th>
            <th>Supplier</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
    <% if @catalog_items.size > 0 %>
    <%= render :partial => 'mini_line', :collection => @catalog_items %>
    <% else %>
        <tr>
            <td colspan="3" class="stripe_even">No items.</td>
        </tr>
    <% end %>
    </tbody>
</table>
</div>