<% if (choose_summary_counter % 3) == 0 %>
<div style="width:180px;clear:left;float:left;padding:5px;margin:10px;border:1px dotted #ccc;">
<% elsif (choose_summary_counter % 3) == 1 %>
<div style="width:180px;float:left;padding:5px;margin:10px;border:1px dotted #ccc;">
<% else %>
<div style="width:180px;float:left;padding:5px;margin:10px;border:1px dotted #ccc;">
<% end %>
<h3><%=h choose_summary.name %></h3>
<div style="padding:10px 15px;">
<%= address_to_html choose_summary %>
<%= choose_summary.attention.blank? ? '' : '<br/>Attn: '+choose_summary.attention %>
</div>
<%= form_tag :action => 'choose' %>
<div style="float:right;margin-right:5%;">
<%= hidden_field_tag 'id', choose_summary.id %><%=small_rollover_submit_tag 'Choose' %></div><small><label><%= check_box_tag 'default',1,false, :style => "border:none;"%>Make default</label></small></form>
</div>