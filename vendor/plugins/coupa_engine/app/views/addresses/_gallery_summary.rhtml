<% if (gallery_summary_counter % 3) == 0 %>
<div style="width:180px;clear:left;float:left;padding:5px;margin:0;border:1px dotted #ccc;">
<% elsif (gallery_summary_counter % 3) == 1 %>
<div style="width:180px;float:left;padding:5px;margin:0;border:1px dotted #ccc;">
<% else %>
<div style="width:180px;float:left;padding:5px;margin:0;border:1px dotted #ccc;">
<% end %>
<span class="gallery_summary">
<%= address_to_html gallery_summary %>
</span><br/>
<%= link_to 'Edit', :controller => 'addresses', :action => 'edit', :id => gallery_summary %> | 
<%= link_to 'Delete', { :controller => 'addresses', :action => 'destroy', :id => gallery_summary }, :confirm => 'Are you sure?' %>
</div>