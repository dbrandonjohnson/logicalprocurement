<% content_for(:page_head) do -%>
    <%= javascript_include_tag('address_picker', :plugin => 'coupa_engine') %>
<% end -%>

<%= hidden_field(object_name, method_name + '_id') %>
<div class="clearfix">
    <div id="<%= field_root_id %>" style="float: left">
      <%= "<div class='missing'>" if highlight %>
        <%= value ? render(:partial => 'addresses/address', :locals => { :address => value }) : content_tag(:span, 'No address selected', :style => "color:#999") %>
      <%= "</div>" if highlight %>
    </div>
    <div style="float: left; padding-left: 1em">
        <%= small_rollover_link_to_function "Change", "show_address_picker('#{field_root_id}')" %>
    </div>
</div>

<div id="<%= field_root_id %>_picker" dojotype="dojo:Dialog" style="display:none">
    <%= render :partial => 'addresses/picker', :locals => {:field_root_id => field_root_id} %>
</div>
